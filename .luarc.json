{
  "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema-zh-cn.json",
  "diagnostics": {
    "globals": ["vim"]
  },
  "runtime": {
    "version": "LuaJIT"
  },
  "workspace": {
    "maxPreload": 100000,
    "preloadFileSize": 10000,
    "ignoreDir": [".vscode", ".git"],
    "library": [
      "/usr/local/opt/neovim/share/nvim/runtime/lua",
      "/usr/local/opt/neovim/share/nvim/runtime/lua/vim/lsp"
    ]
  },
  "telemetry": {
    "enable": false
  }
}
